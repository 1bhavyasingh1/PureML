{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "pnpm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "start": "remix-serve build",
    "format": "npx prettier --write .",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.0.1",
    "@radix-ui/react-dialog": "^1.0.2",
    "@radix-ui/react-dropdown-menu": "^2.0.1",
    "@radix-ui/react-tooltip": "^1.0.2",
    "@remix-run/node": "*",
    "@remix-run/react": "*",
    "@remix-run/serve": "*",
    "@remix-run/server-runtime": "^1.10.0",
    "@remix-run/vercel": "^1.11.0",
    "@vercel/node": "^1.8.3 || ^2.4.0",
    "airtable": "^0.11.6",
    "class-variance-authority": "^0.4.0",
    "clsx": "^1.2.1",
    "csstype": "^3.0.10",
    "dagre": "^0.8.5",
    "isbot": "^3.6.5",
    "lucide-react": "^0.105.0",
    "marked": "^4.2.12",
    "node-fetch": "2.6.1",
    "quill": "^1.3.7",
    "react": "^18.2.0",
    "react-code-blocks": "0.0.9-0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.0",
    "react-is": ">=16.8.0",
    "react-quilljs": "^1.3.3",
    "reactflow": "^11.4.2",
    "remix": "^1.11.1",
    "remix-utils": "^6.0.0",
    "tailwindcss-radix": "^2.6.2",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@remix-run/dev": "*",
    "@remix-run/eslint-config": "*",
    "@types/dagre": "^0.7.48",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "concurrently": "^7.6.0",
    "eslint": "^8.27.0",
    "prettier": "2.8.2",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">=14"
  }
}
